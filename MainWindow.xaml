<Window x:Class="EjercicioFinal2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioFinal2"
        mc:Ignorable="d"
        Title="Caso N° 2" Height="450" Width="800">

    <StackPanel Orientation="Vertical">
        <Label FontWeight="Bold">Lista de pedidos</Label>
        <DataGrid Name="DgPedidos" AutoGenerateColumns="True" Height="200" MouseDoubleClick="DgPedidos_MouseDoubleClick"
                  IsReadOnly="True"></DataGrid>
        <Label FontWeight="Bold">Detalle de pedido</Label>
        <DataGrid Name="DgDetallePedido" AutoGenerateColumns="True" Height="200" IsReadOnly="True">
        </DataGrid>
        
    </StackPanel>
  
</Window>
